<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Application_Name__c</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Purpose__c</field>
        <field>Data_Classification__c</field>
        <field>CreatedBy</field>
        <field>LastModifiedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Email</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Admin</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Admin Of Api Owner</label>
        <name>Admin_Of_Api_Owner</name>
    </approvalStep>
    <description>API must be Approved By Admin User.</description>
    <emailTemplate>Approval_Request_Responses/Approver_Notification_on_Api</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Email_Api_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_Status_To_Be_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Api_Owner_for_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_Status_To_Be_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Admin_To_Approve</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Record_submission_on_Api_for</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>API Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
