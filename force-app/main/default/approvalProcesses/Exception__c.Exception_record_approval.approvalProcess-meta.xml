<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Application_Name__c</field>
        <field>CreatedBy</field>
        <field>Exception_Summary__c</field>
        <field>LastModifiedBy</field>
        <field>Remediation_Due_Date__c</field>
        <field>Remediation_Owner__c</field>
        <field>Remediation_Plan__c</field>
        <field>Risks_Involved__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Supervisor</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Supervisor for exception</label>
        <name>Supervisor_for_exception</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Admin</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Remediation_Due_Date__c  &gt;  DATE(0,0,30)</formula>
        </entryCriteria>
        <label>Admin for exception</label>
        <name>Admin_for_exception</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>This process is created to approve exception records.</description>
    <emailTemplate>Approval_Request_Responses/Notification_For_Approver</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approved_status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_exception_owner_about_record_approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_exception_owner_about_record_rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected_status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Email_admin_About_new_exception</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_exception_owner_about_record_submission</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Pending_status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Exception record approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
